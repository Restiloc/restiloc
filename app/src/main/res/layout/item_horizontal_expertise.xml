<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
   >


        <TextView
            android:id="@+id/label_expertise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Label"
            app:layout_constraintWidth="200dp"
            style="@style/TitleTextStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/description_expertise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth="200dp"

            android:text="description"
            style="@style/SubtitleTextStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_expertise"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/delete_expertise_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/close_button"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_expertise"
            android:textSize="20sp"
            />


</androidx.constraintlayout.widget.ConstraintLayout>