<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/blue_primary</item>
        <item name="colorOnSecondary">@color/dark_blue</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyApplication.Dark" parent="Theme.AppCompat.DayNight">
        <!-- Style pour le mode sombre -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
    </style>

    <style name="DayNight">
        <item name="android:background">@color/white</item>
    </style>
    <style name="NavBar">
        <item name="android:background">@color/blue_primary</item>
    </style>

    <!-- Default style date -->
    <style name="DateStyle">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/bold</item>

    </style>

    <!-- Default button style text -->
    <style name="DefaultButtonStyle">
        <item name="android:textColor">@color/white_secondary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/bold</item>

    </style>

    <!-- button settings style text -->
    <style name="SettingsButtonStyle">
        <item name="android:textColor">@color/white_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/bold</item>

    </style>

    <!-- button pop-up missions style text -->
    <style name="PopupButtonStyle">
        <item name="android:textColor">@color/white_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/bold</item>

    </style>

    <!-- Default style text -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/medium</item>

    </style>

    <!-- Créer le composant titre par défaut -->
    <style name="SubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/bold</item>

    </style>


    <!-- Créer le composant titre par défaut -->
    <style name="TitleTextStyle" parent="SubtitleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/extrabold</item>
    </style>
    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>